<local:WindowBase x:Class="OfficeAutomationClient.View.AboutWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:OfficeAutomationClient.View"
                  mc:Ignorable="d"
                  ResizeMode="NoResize"
                  WindowStartupLocation="CenterScreen"
                  DataContext="{Binding Source={StaticResource Locator}, Path=About}"
                  Title="{Binding Title}" Height="280" Width="420">
    <Grid>
        <TextBlock Text="{Binding Info}" TextWrapping="NoWrap" Margin="10"/>
    </Grid>
</local:WindowBase>